﻿
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Survey Results</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #f8f9fa;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            color: #343a40;
        }

        .header {
            background: linear-gradient(135deg, #6a11cb 0%, #2575fc 100%);
            color: white;
            padding: 2.5rem 1rem;
            margin-bottom: 2rem;
            border-radius: 0 0 10px 10px;
        }

        .survey-container {
            max-width: 900px;
            margin: 0 auto;
            background: white;
            padding: 2rem;
            border-radius: 10px;
            box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.1);
            margin-bottom: 2rem;
        }

        .stats-card {
            background: #f8f9fa;
            padding: 1.5rem;
            border-radius: 8px;
            margin-bottom: 1.5rem;
            border-left: 4px solid #6a11cb;
            text-align: center;
            height: 100%;
            transition: transform 0.3s ease;
        }

            .stats-card:hover {
                transform: translateY(-5px);
                box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
            }

        .stats-value {
            font-size: 2.5rem;
            font-weight: 700;
            color: #6a11cb;
            margin-bottom: 0.5rem;
        }

        .stats-label {
            font-size: 1rem;
            color: #6c757d;
            margin-bottom: 1rem;
        }

        .progress {
            height: 10px;
            border-radius: 5px;
            background-color: #e9ecef;
            overflow: hidden;
        }

        .progress-bar {
            background: linear-gradient(135deg, #6a11cb 0%, #2575fc 100%);
        }

        h4, h5 {
            color: #6a11cb;
            margin-bottom: 1.5rem;
            font-weight: 600;
        }

            h4 i, h5 i {
                margin-right: 10px;
            }

        .btn-secondary {
            background: linear-gradient(135deg, #6c757d 0%, #495057 100%);
            border: none;
            padding: 0.75rem 2rem;
            font-size: 1.1rem;
            transition: all 0.3s ease;
        }

            .btn-secondary:hover {
                transform: translateY(-3px);
                box-shadow: 0 5px 15px rgba(0, 0, 0, 0.2);
            }

        .alert-info {
            background: linear-gradient(135deg, #d1ecf1 0%, #bee5eb 100%);
            color: #0c5460;
            border: none;
            border-left: 4px solid #0c5460;
            border-radius: 8px;
            padding: 1.5rem;
        }

        .rating-value {
            font-size: 1.8rem;
            font-weight: 700;
            color: #28a745;
        }

        .rating-label {
            font-size: 0.9rem;
            color: #6c757d;
        }

        @@media (max-width: 768px) {
            .stats-value {
                font-size: 2rem;
            }
        }
    </style>
</head>
<body>
    <div class="header text-center">
        <h1><i class="fas fa-chart-bar me-2"></i>Survey Results</h1>
        <p class="lead">See the collective preferences of all participants</p>
    </div>

    <div class="container">
        <div class="survey-container">
            <h4><i class="fas fa-chart-pie me-2"></i>Survey Results</h4>

            @if (ViewBag.TotalSurveys == 0)
            {
                <div class="alert alert-info">
                    <i class="fas fa-info-circle me-2"></i>No surveys available yet. Be the first to submit one!
                </div>
            }
            else
            {
                <div id="resultsContent">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="stats-card">
                                <div class="stats-value">@ViewBag.TotalSurveys</div>
                                <div class="stats-label">Total number of surveys</div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="stats-card">
                                <div class="stats-value">@ViewBag.AverageAge</div>
                                <div class="stats-label">Average Age</div>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="stats-card">
                                <div class="stats-value">@ViewBag.OldestAge</div>
                                <div class="stats-label">Oldest person who participated</div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="stats-card">
                                <div class="stats-value">@ViewBag.YoungestAge</div>
                                <div class="stats-label">Youngest person who participated</div>
                            </div>
                        </div>
                    </div>

                    <h5 class="mt-4 mb-3"><i class="fas fa-utensils me-2"></i>Food Preferences</h5>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <div class="stats-card">
                                <div class="stats-value">@ViewBag.PizzaPercentage%</div>
                                <div class="stats-label">Like Pizza</div>
                                <div class="progress">
                                    <div class="progress-bar" role="progressbar" style="width: @ViewBag.PizzaPercentage%"></div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6 mb-3">
                            <div class="stats-card">
                                <div class="stats-value">@ViewBag.PastaPercentage%</div>
                                <div class="stats-label">Like Pasta</div>
                                <div class="progress">
                                    <div class="progress-bar" role="progressbar" style="width: @ViewBag.PastaPercentage%"></div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6 mb-3">
                            <div class="stats-card">
                                <div class="stats-value">@ViewBag.PapWorsPercentage%</div>
                                <div class="stats-label">Like Pap and Wors</div>
                                <div class="progress">
                                    <div class="progress-bar" role="progressbar" style="width: @ViewBag.PapWorsPercentage%"></div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <h5 class="mt-4 mb-3"><i class="fas fa-star me-2"></i>Activity Ratings (Average)</h5>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <div class="stats-card">
                                <div class="rating-value">@ViewBag.MoviesRating</div>
                                <div class="stats-label">Like to watch movies</div>
                                <div class="progress mt-2">
                                    <div class="progress-bar" role="progressbar" style="width: @(ViewBag.MoviesRating / 5 * 100)%"></div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6 mb-3">
                            <div class="stats-card">
                                <div class="rating-value">@ViewBag.RadioRating</div>
                                <div class="stats-label">Like to listen to radio</div>
                                <div class="progress mt-2">
                                    <div class="progress-bar" role="progressbar" style="width: @(ViewBag.RadioRating / 5 * 100)%"></div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6 mb-3">
                            <div class="stats-card">
                                <div class="rating-value">@ViewBag.EatOutRating</div>
                                <div class="stats-label">Like to eat out</div>
                                <div class="progress mt-2">
                                    <div class="progress-bar" role="progressbar" style="width: @(ViewBag.EatOutRating / 5 * 100)%"></div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6 mb-3">
                            <div class="stats-card">
                                <div class="rating-value">@ViewBag.TVRating</div>
                                <div class="stats-label">Like to watch TV</div>
                                <div class="progress mt-2">
                                    <div class="progress-bar" role="progressbar" style="width: @(ViewBag.TVRating / 5 * 100)%"></div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>

        <div class="text-center mt-4">
            <a asp-controller="Survey" asp-action="Index" class="btn btn-secondary">
                <i class="fas fa-arrow-left me-2"></i>Back to Survey
            </a>
        </div>
    </div>
</body>
</html>